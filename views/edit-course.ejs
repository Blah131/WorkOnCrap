<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="edit-course content"> <!-- Changed class from edit-blog to edit-course -->
        <h2>Edit Course</h2>
        <form action="/courses/<%= course._id %>" method="POST"> <!-- Changed action URL from /blogs to /courses -->
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="<%= course.title %>" required>

            <label for="description">Description:</label> <!-- Changed label from Points to Description -->
            <textarea id="description" name="description" required><%= course.description %></textarea> <!-- Changed id and name from snippet to description -->

            <label for="duration">Duration:</label> <!-- Changed label from explanation to Duration -->
            <textarea id="duration" name="duration" required><%= course.duration %></textarea> <!-- Changed id and name from body to duration -->

            <button type="submit">Update Course</button> <!-- Changed text from Update Blog to Update Course -->
        </form>
    </div>

    <%- include('./partials/footer.ejs') %>
</body>
</html>



